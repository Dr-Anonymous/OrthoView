<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Header: Caller Info -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:id="@+id/tvCallerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:id="@+id/layoutLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:layout_marginStart="8dp">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_map_pin"
                        app:tint="#757575"/>
                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginStart="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvCallerNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown Number"
                android:textSize="14sp"
                android:textColor="#757575" />
            
             <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPatientInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fetching patient details..."
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/layoutDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Personal Note -->
                    <LinearLayout
                        android:id="@+id/layoutPersonalNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_file"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="2dp"
                            app:tint="#000000"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Doctor's Personal Note"
                                android:textStyle="bold"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/tvPersonalNote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="#616161"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Complaints -->
                    <LinearLayout
                        android:id="@+id/layoutComplaints"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_stethoscope"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="2dp"
                            app:tint="#000000"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Complaints"
                                android:textStyle="bold"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/tvComplaints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="#616161"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Findings -->
                    <LinearLayout
                        android:id="@+id/layoutFindings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_file"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="2dp"
                            app:tint="#000000"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clinical Findings"
                                android:textStyle="bold"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/tvFindings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="#616161"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Investigations -->
                    <LinearLayout
                        android:id="@+id/layoutInvestigations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_file"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="2dp"
                            app:tint="#000000"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Investigations"
                                android:textStyle="bold"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/tvInvestigations"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="#616161"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Diagnosis -->
                    <LinearLayout
                        android:id="@+id/layoutDiagnosis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_stethoscope"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="2dp"
                            app:tint="#000000"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Diagnosis"
                                android:textStyle="bold"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/tvDiagnosis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="#616161"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Medications -->
                    <LinearLayout
                        android:id="@+id/layoutMedications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_pill"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="2dp"
                            app:tint="#000000"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Medications"
                                android:textStyle="bold"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/tvMedications"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="#616161"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Advice -->
                    <LinearLayout
                        android:id="@+id/layoutAdvice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_file"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="2dp"
                            app:tint="#000000"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Advice"
                                android:textStyle="bold"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/tvAdvice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="#616161"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Follow-up -->
                    <LinearLayout
                        android:id="@+id/layoutFollowUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="2dp"
                            app:tint="#000000"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Follow-up"
                                android:textStyle="bold"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/tvFollowUp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="#616161"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Calendar Events -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCalendarEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/layoutCalendarEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            android:layout_marginEnd="12dp"
                            app:tint="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calendar Event"
                            android:textStyle="bold"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    
                    <TextView
                        android:id="@+id/tvCalendarEventDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvCalendarEventDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#616161"
                        android:layout_marginStart="32dp"/>

                    <TextView
                        android:id="@+id/tvCalendarEventAttachment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Attachment"
                        android:textSize="13sp"
                        android:textColor="#2196F3"
                        android:textStyle="bold"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/layoutAttachmentPreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="8dp">
                        
                        <Button
                            android:id="@+id/btnCloseAttachment"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="Close Preview"
                            android:textSize="10sp"
                            android:backgroundTint="#757575"
                            android:layout_gravity="end"/>

                        <WebView
                            android:id="@+id/wvAttachment"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="#F5F5F5"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/layoutActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnReceiveCall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Receive"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"/>
            
             <Button
                android:id="@+id/btnWhatsApp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WhatsApp"
                android:backgroundTint="#25D366"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClinic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clinic"
                android:textSize="12sp"
                android:backgroundTint="#607D8B"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnLaxmi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Laxmi"
                android:textSize="12sp"
                android:backgroundTint="#607D8B"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnBadam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Badam"
                android:textSize="12sp"
                android:backgroundTint="#607D8B"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
